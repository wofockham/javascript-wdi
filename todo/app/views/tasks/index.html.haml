%ol
  - @tasks.each do |task|
    %li
      %ul
        %script
          = "$(document).ready(function () {"
          = "add_marker(#{task.latitude}, #{task.longitude}, '#{task.title}');"
          = "});"
        %li= task.title
        %li= task.description
        %li= task.duedate
        %li= task.is_complete
        %li= task.priority.name
        %li= task.address

%div#map
  %div#map_canvas
